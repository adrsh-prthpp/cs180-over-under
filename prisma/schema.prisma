generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  name        String
  email       String    @unique
  password    String
  createdBets Bet[]     @relation("UserCreatedBets")
  bets        BetUser[]
}

model Bet {
  id        String    @id @default(uuid())
  expiry    Int?
  name      String
  creatorId String?
  creator   User?     @relation("UserCreatedBets", fields: [creatorId], references: [id])
  betUsers  BetUser[]
}

model BetUser {
  userId String
  betId  String
  choice String
  bet    Bet    @relation(fields: [betId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, betId])
}
