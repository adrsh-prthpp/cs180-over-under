generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())

  createdBets Bet[]    @relation("UserCreatedBets")  // ✅ Users who created bets
  betPlacements BetUser[] // ✅ Users who placed bets
}

model Bet {
  id        String   @id @default(uuid())
  creatorId String
  createdAt DateTime @default(now())
  expiry    DateTime? // ✅ Added expiry
  question  String

  creator   User      @relation("UserCreatedBets", fields: [creatorId], references: [id])
  betUsers  BetUser[]  // ✅ Added missing betUsers relation
}

model BetUser {
  userId String
  betId  String
  choice String  // "over" or "under"

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  bet  Bet  @relation(fields: [betId], references: [id], onDelete: Cascade)

  @@id([userId, betId]) // Composite primary key
}
